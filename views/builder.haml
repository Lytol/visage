%div#builder 
  %form{:action => "/builder", :method => :get}

    - if @selected_hosts.size > 0 && @selected_metrics.size > 0
      %div#profile-preview
        %p foo
      %div#profile-meta
        %p
          %h2 Profile name
        %p 
          %input{:name => "profile_name", :value => params[:profile_name], :type => "text", :class => "text"}
        %p
          %input{:type => "submit", :value => "create profile", :class => "create profile", :name => "create"}
  
    %div#hosts.builder
      %h2 Hosts
      %input{:name => "hosts", :type => "text", :class => "text", :value => params[:hosts]}
      %input{:type => "submit", :class => "submit", :value => ""}
      %img{:src => "/images/hosts.png", :class => "icon hosts"}
      %span{:class => "glob example"} e.g. &ldquo;charlie&rdquo;, &ldquo;*.bravo*&rdquo;, &ldquo;echo, foxtrot*&rdquo;
      
      %ul.selected
        - @selected_hosts.each do |name|
          %li= name 

      %h5 Available
      %ul.available
        - @hosts.each do |name|
          %li= name 
    
    %div#metrics.builder
      %h2 Metrics
      %input{:name => "metrics", :type => "text", :class => "text", :value => params[:metrics]}
      %input{:type => "submit", :class => "submit", :value => ""}
      %img{:src => "/images/metrics.png", :class => "icon metrics"}
      %span{:class => "glob example"} e.g. &ldquo;cpu*/*&rdquo;, &ldquo;disk*/*ops, disk*/*time&rdquo;
    
      %ul.selected
        - @selected_metrics.each do |name|
          %li= name 

      %h5 Available
      %ul.available
        - @metrics.each do |name|
          %li= name 
    
  
